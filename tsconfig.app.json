{
  "extends": "./tsconfig.base.json",
  "include": ["app/**/*", "shared-api.d.ts", "vite.config.ts"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": [
      "@remix-run/node",
      "node",
      "react/experimental",
      "react-dom/experimental",
      "vite/client"
    ],
    "paths": {
      "@/*": ["./app/*"]
    }
  }
}
